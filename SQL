DROP TABLE IF EXISTS users,Pizza;

CREATE TABLE IF NOT EXISTS users (
    u_id varchar(36) NOT NULL UNIQUE,
    u_username varchar(50) UNIQUE,
    u_password varchar(255),
    u_createDate datetime NOT NULL,
    u_status boolean NOT NULL DEFAULT 1,
    CONSTRAINT ck_user
    PRIMARY KEY (u_id,u_username)
);
CREATE TABLE IF NOT EXISTS Pizza ( 
    pizzaId int NOT NULL UNIQUE,
    category varchar(30) UNIQUE,
    price int NOT NULL,
    CONSTRAINT ck_pizza
    PRIMARY KEY (pizzaId,category) 
);

INSERT INTO users (u_id,u_username,u_password,u_createDate,u_status) VALUES (uuid(),'654321','123456@Abc',CURDATE(),default);

