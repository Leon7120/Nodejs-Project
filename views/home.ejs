<%- include ('./header.ejs')%>

<div class="content">
    <!-- sidebar -->
    <nav class="sidebar">
      <div class="sidebar_content">
        <ul class="sidebar_items">
          <div class="sidebar_title">Dashboard</div>
          <li class="item">
            <span class="span_item">Admin</span>
            <i class="bx bx-chevron-right arrow-left"></i>
            <ul class="sidebar_items submenu">
              <a href="#" class="sublink">Nav Sub Link</a>
              <a href="#" class="sublink">Nav Sub Link</a>
              <a href="#" class="sublink">Nav Sub Link</a>
              <a href="#" class="sublink">Nav Sub Link</a>
            </ul>
          </li>
        </ul>
        <ul class="sidebar_items">
          <div class="sidebar_title">Actions</div>
          <li class="item">
            <button class="span-button"><span class="span_item">Get</span></button>
          </li>
          <li class="item">
            <button class="span-button"><span class="span_item">Create</span></button>
          </li>
          <li class="item">
            <button class="span-button"><span class="span_item">Update</span></button>
          </li>
          <li class="item">
            <button class="span-button"><span class="span_item">Delete</span></button>
          </li>
        </ul>
        <div class="bottom_items">
          <div class="bottom">
            <button action="/v1/logout" method="POST" class="logout-button" id="logout-button">
              <span class="span_item"> <i class="fa-solid fa-right-from-bracket"></i>Logout</span>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <div class="main-content">
      <div class="message home-message" id="home-message"></div>

      <div class="actions-form" id="search-pizza-div">
        <div class="actions-title">
          <span id="span-title">Search</span>
        </div>
        <div class="actions-contents">
          <div class="actions-input">
            <input type="text" id="get-id" name="get-id" autocomplete="off">
            <label for="get-id">Pizza Id</label>
          </div>
          <div class="actions-input">
            <input type="text" id="get-category" name="get-category" autocomplete="off">
            <label for="get-category">Category</label>
          </div>
          <div class="actions-input">
            <input type="text" id="get-price" name="get-price" autocomplete="off">
            <label for="get-price">Price</label>
          </div>
          <button class="actions-button" id="get-button">Get</button>
        </div>
      </div>

      <div class="actions-form" id="create-pizza-div">
        <div class="actions-title">
          <span>Create Pizza</span>
        </div>
        <div class="actions-contents">
          <div class="create-div">
            <form class="create-form" id="create-form">
              <div class="actions-input">
                <input type="text" id="create-id" name="id">
                <label for="create-id">Pizza Id</label>
              </div>
              <div class="actions-input">
                <input type="text" id="create-category" name="category">
                <label for="create-category">Category</label>
              </div>
              <div class="actions-input">
                <input type="text" id="create-price" name="price">
                <label for="create-price">Price</label>
              </div>
              <button class="actions-button" button="submit" id="create-button">Create</button>
            </form>
          </div>
        </div>
      </div>

      <div class="actions-form" id="update-pizza-div">
        <div class="actions-title">
          <span>Update Pizza</span>
        </div>
        <div class="actions-contents">
          <div class="update-div">
            <form class="update-form" id="update-form">
              <div class="actions-input">
                <input type="text" id="update-id" name="update-id">
                <label for="update-id">Pizza Id</label>
              </div>
              <div class="actions-input">
                <input type="text" id="update-category" name="update-category">
                <label for="update-category">Category</label>
              </div>
              <div class="actions-input">
                <input type="text" id="update-price" name="update-price">
                <label for="update-price">Price</label>
              </div>
              <button class="actions-button" button="submit" id="update-button">Update</button>
            </form>
          </div>
        </div>
      </div>

      <div class="actions-form" id="delete-pizza-div">
        <div class="actions-title">
          <span>Delete Pizza</span>
        </div>
        <div class="actions-contents">
          <div class="delete-div">
            <form class="delete-form" id="delete-form">
              <div class="actions-input">
                <input type="text" id="delete-id" name="delete-id" autocomplete="off" required>
                <label for="delete-id">Pizza Id</label>
              </div>
              <button class="actions-button" button="submit">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <table class="table" id="table"></table>

    </div>
  </div>

  <%- include ('./footer.ejs')%>